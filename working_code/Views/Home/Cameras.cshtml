@using System.Text
@model Dictionary<DateTime, int>

@{
    ViewData["Title"] = "Home Page";
    var accID = User.FindFirst("AccID")?.Value;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="icon" href="~/images/favicon.png" type="image/png" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        .pdfButton {
            background-color: rgb(255, 245, 137);
            border: none;
            color: rgb(0, 0, 0);
            padding: 15px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            cursor: pointer;
            border-radius: 5px;
            width: 100%;
            max-width: 250px;
            margin: 0 auto;
        }
        .beach-image {
            width: 100%;
            margin-top: 20px;
        }
        .container {
            margin-top: 20px;
        }
        .centered-buttons {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 10px;
        }
        .loading-spinner {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background-color: white;
            padding: 20px;
            border-radius: 10px;
            color: black;
            z-index: 1000;
            display: none;
            text-align: center;
        }
        .overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(255, 255, 255, 0.8);
            z-index: 999;
            display: none;
        }
    </style>
</head>
<body class="homePage bg-dark text-white">
    <div class="container">
        <h1 class="display-4 text-center" style="text-shadow: -1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000, 1px 1px 0 #000">
            Myrtle Beach Travel Park Cameras
        </h1>
        @if (accID == "1" || accID == "2" || accID == "3")
        {
            <table style="width: 100%;">
                <tr>
                    <td style="width: 50%;">
                        <iframe src="https://player.brownrice.com/embed/mbtravelpark3" style="width: 100%; aspect-ratio: 1.777;" border="0" frameborder="0" scrolling="no" allow="autoplay; fullscreen" allowfullscreen mozallowfullscreen></iframe> 
                    </td>
                    <td style="width: 50%;">
                        <iframe src="https://player.brownrice.com/embed/mbtravelpark5" style="width: 100%; aspect-ratio: 1.777;" border="0" frameborder="0" scrolling="no" allow="autoplay; fullscreen" allowfullscreen mozallowfullscreen></iframe> 
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        <iframe src="https://player.brownrice.com/embed/mbtravelpark4" style="width: 50%; aspect-ratio: 1.777;" border="0" frameborder="0" scrolling="no" allow="autoplay; fullscreen" allowfullscreen mozallowfullscreen></iframe> 
                    </td>
                </tr>
            </table>
        }
    </div>
    <p>&nbsp;</p>
    <p>&nbsp;</p>
    <p>&nbsp;</p>
    <p>&nbsp;</p>
    <p>&nbsp;</p>
    <p>&nbsp;</p>
    <p>&nbsp;</p>
    <p>&nbsp;</p>
    <p>&nbsp;</p>
    <p>&nbsp;</p>
    <p>&nbsp;</p>
    <p>&nbsp;</p>
    <p>&nbsp;</p>
    <p>&nbsp;</p>
    <p>&nbsp;</p>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</body>
</html>