@using System.Text
@model Dictionary<DateTime, int>

@{
    ViewData["Title"] = "Home Page";
    var accID = User.FindFirst("AccID")?.Value;
    int accIDInt = 0;
    int.TryParse(accID, out accIDInt);
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="icon" href="~/images/favicon.png" type="image/png" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        .pdfButton {
            background-color: rgb(255, 245, 137);
            border: none;
            color: rgb(0, 0, 0);
            padding: 15px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            cursor: pointer;
            border-radius: 5px;
            width: 100%;
            max-width: 250px;
            margin: 0 auto;
        }
        .beach-image {
            width: 100%;
            margin-top: 20px;
        }
        .container {
            margin-top: 20px;
        }
        .centered-buttons {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 10px;
        }
        .loading-spinner {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background-color: white;
            padding: 20px;
            border-radius: 10px;
            color: black;
            z-index: 1000;
            display: none;
            text-align: center;
        }
        .overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(255, 255, 255, 0.8);
            z-index: 999;
            display: none;
        }
    </style>
</head>
<body class="homePage bg-dark text-white">
    <div class="overlay" id="overlay"></div>
    <div id="loadingSpinner" class="loading-spinner">
        <p style="font-size:30px">Please wait while we gather this data for you!</p>
        <i class="fas fa-spinner fa-spin fa-3x"></i>
    </div>
    <div class="container">
        <h1 class="display-4 text-center" style="text-shadow: -1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000, 1px 1px 0 #000">
            Myrtle Beach Travel Park Newbook Database
        </h1>
        <div class="centered-buttons my-4">
            <a class="pdfButton loadingButton" asp-area="" asp-controller="Home" asp-action="Occupancy">Occupancy</a>
            <a class="pdfButton loadingButton" asp-area="" asp-controller="Home" asp-action="OccupancyAges">Occupancy W/Ages</a>
            @if (accIDInt < 4 || accIDInt == 7 || accIDInt == 9)
            {
                <a class="pdfButton loadingButton" asp-area="" asp-controller="Home" asp-action="DailyBookings">Daily Bookings</a>
                <a class="pdfButton" asp-area="" asp-controller="Home" asp-action="BookingsDem">Booking Demographics</a>
            }
            @if (accID == "1" || accID == "3" || accID == "8")
            { 
                <a class="pdfButton" asp-area="" asp-controller="Home" asp-action="TrailerMoves">Trailer Move List</a>
            }
            @if (accID == "1" || accID == "3" || accID == "4" || accID == "8")
            { 
                <a class="pdfButton" asp-area="" asp-controller="Home" asp-action="ExpressCheckins">Express Check-in List</a>
            }
        </div>
    </div>
    <p>&nbsp;</p>
    <p>&nbsp;</p>
    <p>&nbsp;</p>
    <p>&nbsp;</p>
    <p>&nbsp;</p>
    <p>&nbsp;</p>
    <p>&nbsp;</p>
    <p>&nbsp;</p>
    <p>&nbsp;</p>
    <p>&nbsp;</p>
    <p>&nbsp;</p>
    <p>&nbsp;</p>
    <p>&nbsp;</p>
    <p>&nbsp;</p>
    <p>&nbsp;</p>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function() {
            const loadingOverlay = document.getElementById('overlay');
            const loadingSpinner = document.getElementById('loadingSpinner');

            $('.loadingButton').click(function(event) {
                event.preventDefault();
                showLoadingSpinner();
                sessionStorage.setItem('loading', 'true');
                window.location.href = $(this).attr('href');
            });

            function showLoadingSpinner() {
                loadingOverlay.style.display = 'block';
                loadingSpinner.style.display = 'block';
            }

            function hideLoadingSpinner() {
                loadingOverlay.style.display = 'none';
                loadingSpinner.style.display = 'none';
            }

            // Hide loading overlay when content is fully loaded
            window.addEventListener('load', function() {
                hideLoadingSpinner();
                sessionStorage.removeItem('loading');
            });

            // Check session storage for loading state
            if (sessionStorage.getItem('loading') === 'true') {
                showLoadingSpinner();
            }
        });
    </script>
</body>
</html>